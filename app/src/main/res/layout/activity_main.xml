<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.antfi.contatore.MainActivity">

    <TextView
        android:id="@+id/textMessage"
        android:layout_width="wrap_content"
        android:layout_height="25dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="32dp"
        android:text="@string/messaggio"
        android:textAppearance="@android:style/TextAppearance.Material.Medium"
        android:textColor="@android:color/holo_red_dark"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/BtnAdd"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="@string/aumenta"
        app:layout_constraintEnd_toStartOf="@+id/BtnMinus"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/chkRaddoppia" />

    <Button
        android:id="@+id/BtnMinus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/diminuisci"
        app:layout_constraintBottom_toBottomOf="@+id/BtnAdd"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/BtnAdd" />

    <Button
        android:id="@+id/btnAzzera"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:text="@string/azzera"
        app:layout_constraintTop_toBottomOf="@+id/BtnMinus"
        tools:layout_editor_absoluteX="148dp" />

    <CheckBox
        android:id="@+id/chkRaddoppia"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:text="@string/x2"
        app:layout_constraintTop_toBottomOf="@+id/textMessage"
        tools:layout_editor_absoluteX="148dp" />

</android.support.constraint.ConstraintLayout>
